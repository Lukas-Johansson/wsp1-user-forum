{% extends "layout.njk" %}
{% block  content %}
<main class="profile">
    <h1>{{ title }}</h1>
    <p>Username: {{ row.name }}</p>
    <button type="submit"><a href="/logout">Logout</a></button>
    <button type="submit"><a href="/">Home</a></button>
    <button type="submit"><a href="/delete">Delete User</a></button>
    <h1> My Posts </h1>
    <ul>
        {% for post in posts %}
        <li>
            <a href="/post/{{ post.id }}">{{ post.title }}</a>
        </li>
        {% endfor %}
</main>
{% endblock %}